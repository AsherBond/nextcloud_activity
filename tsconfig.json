{
	"extends": "@vue/tsconfig/tsconfig.json",
	"include": ["./src/**/*.ts", "./src/**/*.vue"],
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Bundler",
		"noImplicitAny": false,
		"outDir": "./js/",
		"strict": true
	},
	// these options are overrides used only by ts-node (cypress)
	"ts-node": {
		// faster and no need for when running cypress
		"transpileOnly": true,
		"compilerOptions": {
			"module": "ES2015"
		}
	},
	"vueCompilerOptions": {
		"target": 2.7
	}
}